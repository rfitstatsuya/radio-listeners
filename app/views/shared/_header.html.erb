    <header>
      <div class="header-wrapper">
        <h1 class="header-logo">
          <%= link_to 'RADIO LISTENER', root_path %>
        </h1>
        <div class="headder-navi">
          <% if user_signed_in? %>
            <div class="headder-buttons signed-button">
              <%= link_to "マイページ", user_path(current_user.id), class: "header-button" %>
              <%= link_to "ログアウト", destroy_user_session_path, data: { turbo_method: :delete }, class: "header-button" %>
            </div>
          <% else %>
            <div class="headder-buttons">
              <%= link_to "ログイン", new_user_session_path, class: "header-button" %>
              <%= link_to "新規登録", new_user_registration_path, class: "header-button" %>
            </div>
          <% end %>
        </div>
      </div>
    </header>